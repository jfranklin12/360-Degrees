{
  // Prevent ESLint from looking at parent directories
  "root": true,
  "extends": ["prettier"],
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    // Add support for ES6 features
    "es6": true
  },
  "rules": {
    "no-duplicate-case": "warn",
    "no-empty": "warn",
    "no-extra-semi": "warn",
    "no-func-assign": "warn",
    "no-irregular-whitespace": "warn",
    "no-unreachable": "warn",
    "curly": "warn",
    "dot-notation": "warn",
    "eqeqeq": "warn",
    "no-empty-function": "warn",
    "no-multi-spaces": "warn",
    "no-mixed-spaces-and-tabs": "warn",
    "no-trailing-spaces": "warn",
    "default-case": "warn",
    "no-fallthrough": "warn",
    "no-unused-vars": "warn",
    "no-use-before-define": "warn",
    "no-redeclare": "warn",
    "brace-style": "warn",
    "indent": ["warn"],
    "quotes": ["warn", "double"],
    "semi": ["warn", "always"],
    "radix": "off"
  }
}
